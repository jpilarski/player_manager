<Window x:Class="Pilarski.PlayerManager.UI.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:Pilarski.PlayerManager.Core;assembly=Pilarski.PlayerManager.Core"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Player Details" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <ObjectDataProvider x:Key="PositionsData" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:Position"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="CountriesData" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:Country"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="FeetData" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:PreferredFoot"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="FULL NAME" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBox Text="{Binding Name}" CharacterCasing="Upper" Padding="5"/>

                <TextBlock Text="NATIONALITY" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox ItemsSource="{Binding Source={StaticResource CountriesData}}" 
                          SelectedItem="{Binding Nationality}" Padding="5"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="BIRTH YEAR" FontWeight="Bold"/>
                        <TextBox Text="{Binding BirthYear}" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="MARKET VALUE (€)" FontWeight="Bold"/>
                        <TextBox Text="{Binding MarketValue}" Padding="5"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="POSITION" FontWeight="Bold"/>
                        <ComboBox ItemsSource="{Binding Source={StaticResource PositionsData}}" 
                                  SelectedItem="{Binding Position}" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,5,0">
                        <TextBlock Text="FOOT" FontWeight="Bold"/>
                        <ComboBox ItemsSource="{Binding Source={StaticResource FeetData}}" 
                                  SelectedItem="{Binding Foot}" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5,0,0,0">
                        <TextBlock Text="OVERALL" FontWeight="Bold"/>
                        <TextBox Text="{Binding Overall}" Padding="5" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="SKILL MOVES (1-5)" FontWeight="Bold"/>
                        <Slider Minimum="1" Maximum="5" Value="{Binding SkillMoves}" 
                                AutoToolTipPlacement="TopLeft" TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="WEAK FOOT (1-5)" FontWeight="Bold"/>
                        <Slider Minimum="1" Maximum="5" Value="{Binding WeakFoot}" 
                                AutoToolTipPlacement="TopLeft" TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="IMAGE FILENAME (e.g. lewy.png)" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding ImagePath}" Padding="5"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="BtnSave" Content="SAVE" Width="100" Height="30" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="CANCEL" Width="100" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>